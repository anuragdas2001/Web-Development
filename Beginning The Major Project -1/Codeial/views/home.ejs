<h1>Codeiel / <%=title %></h1>

<section id="feed-post">
  <h4>Posts</h4>
  <form action="/posts/create-post" id="new-post-form" method="POST">
    <textarea
      name="content"
      cols="30"
      rows="5"
      placeholder="What's on your mind ?"
    ></textarea>
    <input type="submit" value="Post" />
  </form>

  <div id="post-list-container">
    <ul>
      <% for(post of posts){ %>

      <li>
        <p>
            <small><%=user.name%></small>
            <br>
          <%=post.content %>
        </p>
          
    </li>

      <% } %>
    </ul>
  </div>
</section>
